<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="95dp"
    android:background="@drawable/raffle_card"
    android:elevation="5dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/lblRaffle"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:layout_weight="5"
        android:focusable="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/drawBtn"
        android:textSize="16sp"
        android:textStyle="bold"
        app:fontFamily="@font/adamina"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lblRaffleType"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:focusable="false"
        app:layout_constraintStart_toStartOf="@+id/lblRaffle"
        app:layout_constraintTop_toBottomOf="@+id/lblRaffle" />

    <TextView
        android:id="@+id/lblDrawDate"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:focusable="false"
        app:layout_constraintStart_toStartOf="@+id/lblRaffleType"
        app:layout_constraintTop_toBottomOf="@+id/lblRaffleType" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:focusable="false"
        app:layout_constraintBottom_toBottomOf="@+id/lblRaffleType"
        app:layout_constraintEnd_toStartOf="@+id/lblRaffleType"
        app:layout_constraintTop_toTopOf="@+id/lblRaffleType" />

    <TextView
        android:id="@+id/lblPrize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/prize_card"
        android:textColor="@color/delete_btn"
        android:textSize="16sp"
        android:textStyle="bold"
        app:fontFamily="@font/adamina"
        app:layout_constraintBottom_toBottomOf="@+id/lblRaffle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/lblRaffle"
        app:layout_constraintTop_toTopOf="@+id/lblRaffle" />

    <TextView
        android:id="@+id/lblTicketPrice"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="@+id/lblPrize"
        app:layout_constraintStart_toStartOf="@+id/lblPrize"
        app:layout_constraintTop_toBottomOf="@+id/lblPrize" />

    <TextView
        android:id="@+id/lblNumTicketsSold"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="@+id/lblTicketPrice"
        app:layout_constraintStart_toStartOf="@+id/lblTicketPrice"
        app:layout_constraintTop_toBottomOf="@+id/lblTicketPrice" />

</androidx.constraintlayout.widget.ConstraintLayout>