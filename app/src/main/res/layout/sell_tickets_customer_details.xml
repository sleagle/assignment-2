<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <EditText
            android:id="@+id/txtLastName_ST"
            android:layout_width="@dimen/text_create_width"
            android:layout_height="wrap_content"
            android:autofillHints="@string/last_name"
            android:ems="10"
            android:hint="Last name"
            android:inputType="textPersonName"
            android:textSize="16sp"
            app:fontFamily="@font/adamina"
            app:layout_constraintBottom_toBottomOf="@+id/lblLastName"
            app:layout_constraintStart_toEndOf="@+id/lblLastName"
            app:layout_constraintTop_toTopOf="@+id/lblLastName" />

        <TextView
            android:id="@+id/lblLastName"
            android:layout_width="@dimen/title_width"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/last_name"
            android:textColor="@color/textTitle"
            android:textSize="16sp"
            android:textStyle="bold"
            app:fontFamily="@font/adamina"
            app:layout_constraintStart_toStartOf="@+id/lblFirstName"
            app:layout_constraintTop_toBottomOf="@+id/lblFirstName" />

        <EditText
            android:id="@+id/txtMobile_ST"
            android:layout_width="@dimen/text_create_width"
            android:layout_height="wrap_content"
            android:autofillHints="@string/mobile"
            android:ems="10"
            android:hint="Mobile number"
            android:inputType="phone"
            android:textSize="16sp"
            app:fontFamily="@font/adamina"
            app:layout_constraintBottom_toBottomOf="@+id/lblPhone"
            app:layout_constraintStart_toEndOf="@+id/lblPhone"
            app:layout_constraintTop_toTopOf="@+id/lblPhone" />

        <TextView
            android:id="@+id/lblPhone"
            android:layout_width="@dimen/title_width"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/mobile"
            android:textColor="@color/textTitle"
            android:textSize="16sp"
            android:textStyle="bold"
            app:fontFamily="@font/adamina"
            app:layout_constraintStart_toStartOf="@+id/lblLastName"
            app:layout_constraintTop_toBottomOf="@+id/lblLastName" />

        <EditText
            android:id="@+id/txtFirstName_ST"
            android:layout_width="@dimen/text_create_width"
            android:layout_height="wrap_content"
            android:autofillHints="@string/first_name"
            android:ems="10"
            android:hint="First name"
            android:inputType="textPersonName"
            android:textSize="16sp"
            app:fontFamily="@font/adamina"
            app:layout_constraintBottom_toBottomOf="@+id/lblFirstName"
            app:layout_constraintStart_toEndOf="@+id/lblFirstName"
            app:layout_constraintTop_toTopOf="@+id/lblFirstName" />

        <EditText
            android:id="@+id/txtSuburb_ST"
            android:layout_width="@dimen/text_create_width"
            android:layout_height="wrap_content"
            android:autofillHints="@string/suburb"
            android:ems="10"
            android:hint="Suburb"
            android:inputType="textPersonName"
            android:textSize="16sp"
            app:fontFamily="@font/adamina"
            app:layout_constraintBottom_toBottomOf="@+id/lblSuburb"
            app:layout_constraintStart_toEndOf="@+id/lblSuburb"
            app:layout_constraintTop_toTopOf="@+id/lblSuburb" />

        <TextView
            android:id="@+id/lblState"
            android:layout_width="@dimen/title_width"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/state"
            android:textColor="@color/textTitle"
            android:textSize="16sp"
            android:textStyle="bold"
            app:fontFamily="@font/adamina"
            app:layout_constraintStart_toStartOf="@+id/lblSuburb"
            app:layout_constraintTop_toBottomOf="@+id/lblSuburb" />

        <TextView
            android:id="@+id/lblFirstName"
            android:layout_width="@dimen/title_width"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/first_name"
            android:textColor="@color/textTitle"
            android:textSize="16sp"
            android:textStyle="bold"
            app:fontFamily="@font/adamina"
            app:layout_constraintStart_toStartOf="@+id/lblTitle"
            app:layout_constraintTop_toBottomOf="@+id/lblTitle" />

        <Spinner
            android:id="@+id/state_spinner_ST"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/lblState"
            app:layout_constraintStart_toEndOf="@+id/lblState"
            app:layout_constraintTop_toTopOf="@+id/lblState" />

        <TextView
            android:id="@+id/lblTitle"
            android:layout_width="@dimen/title_width"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:text="@string/title"
            android:textColor="@color/textTitle"
            android:textSize="16sp"
            android:textStyle="bold"
            app:fontFamily="@font/adamina"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Spinner
            android:id="@+id/title_spinner_ST"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/lblTitle"
            app:layout_constraintStart_toEndOf="@+id/lblTitle"
            app:layout_constraintTop_toTopOf="@+id/lblTitle" />

        <EditText
            android:id="@+id/txtAddress_ST"
            android:layout_width="@dimen/text_create_width"
            android:layout_height="wrap_content"
            android:autofillHints="@string/address"
            android:ems="10"
            android:hint="Number and Street"
            android:inputType="textPersonName"
            android:textSize="16sp"
            app:fontFamily="@font/adamina"
            app:layout_constraintBottom_toBottomOf="@+id/lblAddress"
            app:layout_constraintStart_toEndOf="@+id/lblAddress"
            app:layout_constraintTop_toTopOf="@+id/lblAddress"
            app:layout_constraintVertical_bias="0.19" />

        <TextView
            android:id="@+id/lblAddress"
            android:layout_width="@dimen/title_width"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/address"
            android:textColor="@color/textTitle"
            android:textSize="16sp"
            android:textStyle="bold"
            app:fontFamily="@font/adamina"
            app:layout_constraintStart_toStartOf="@+id/lblEmail"
            app:layout_constraintTop_toBottomOf="@+id/lblEmail" />

        <TextView
            android:id="@+id/lblSuburb"
            android:layout_width="@dimen/title_width"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/suburb"
            android:textColor="@color/textTitle"
            android:textSize="16sp"
            android:textStyle="bold"
            app:fontFamily="@font/adamina"
            app:layout_constraintStart_toStartOf="@+id/lblAddress"
            app:layout_constraintTop_toBottomOf="@+id/lblAddress" />

        <EditText
            android:id="@+id/txtEmail_ST"
            android:layout_width="@dimen/text_create_width"
            android:layout_height="wrap_content"
            android:autofillHints="@string/email"
            android:ems="10"
            android:hint="Email address"
            android:inputType="textEmailAddress"
            android:textSize="16sp"
            app:fontFamily="@font/adamina"
            app:layout_constraintBottom_toBottomOf="@+id/lblEmail"
            app:layout_constraintStart_toEndOf="@+id/lblEmail"
            app:layout_constraintTop_toTopOf="@+id/lblEmail" />

        <TextView
            android:id="@+id/lblEmail"
            android:layout_width="@dimen/title_width"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/email"
            android:textColor="@color/textTitle"
            android:textSize="16sp"
            android:textStyle="bold"
            app:fontFamily="@font/adamina"
            app:layout_constraintStart_toStartOf="@+id/lblPhone"
            app:layout_constraintTop_toBottomOf="@+id/lblPhone" />

        <EditText
            android:id="@+id/txtPostCode_ST"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:autofillHints="@string/post_code"
            android:ems="10"
            android:hint="Post code"
            android:inputType=""
            android:textSize="16sp"
            app:fontFamily="@font/adamina"
            app:layout_constraintBottom_toBottomOf="@+id/lblPostCode"
            app:layout_constraintStart_toEndOf="@+id/lblPostCode"
            app:layout_constraintTop_toTopOf="@+id/lblPostCode" />

        <TextView
            android:id="@+id/lblPostCode"
            android:layout_width="@dimen/title_width"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/post_code"
            android:textColor="@color/textTitle"
            android:textSize="16sp"
            android:textStyle="bold"
            app:fontFamily="@font/adamina"
            app:layout_constraintStart_toStartOf="@+id/lblState"
            app:layout_constraintTop_toBottomOf="@+id/lblState" />

        <Button
            android:id="@+id/btnSell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/rounded_btn"
            android:text="@string/sell"
            android:textColor="@color/btn_txt"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/btnDiscard_ST"
            app:layout_constraintEnd_toEndOf="@+id/txtSuburb_ST"
            app:layout_constraintTop_toTopOf="@+id/btnDiscard_ST" />

        <Button
            android:id="@+id/btnDiscard_ST"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/rounded_delete_btn"
            android:text="@string/discard"
            android:textColor="@color/btn_txt"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/lblPostCode"
            app:layout_constraintTop_toBottomOf="@+id/lblPostCode" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>