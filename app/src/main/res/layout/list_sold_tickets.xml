    <TextView
        android:id="@+id/txtCustomerName"
        android:layout_width="336dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:focusable="false"
        android:textColor="@color/edit_btn"
        android:textSize="16sp"
        app:fontFamily="@font/adamina"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtPurchasedOn"
        android:layout_width="336dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:focusable="false"
        android:textSize="16sp"
        app:fontFamily="@font/adamina"
        app:layout_constraintEnd_toEndOf="@+id/txtCustomerName"
        app:layout_constraintStart_toStartOf="@+id/txtCustomerName"
        app:layout_constraintTop_toBottomOf="@+id/txtCustomerName" />

    <TextView
        android:id="@+id/txtTotTickets"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:focusable="false"
        android:textSize="16sp"
        app:fontFamily="@font/adamina"
        app:layout_constraintStart_toStartOf="@+id/txtPurchasedOn"
        app:layout_constraintTop_toBottomOf="@+id/txtPurchasedOn" />

    <TextView
        android:id="@+id/txtTotPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100dp"
        android:focusable="false"
        android:textColor="@color/delete_btn"
        android:textSize="16sp"
        app:fontFamily="@font/adamina"
        app:layout_constraintBottom_toBottomOf="@+id/txtTotTickets"
        app:layout_constraintStart_toEndOf="@+id/txtTotTickets"
        app:layout_constraintTop_toTopOf="@+id/txtTotTickets"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>